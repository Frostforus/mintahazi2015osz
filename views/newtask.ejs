<%- include('header') %>
<!-- start: content -->
<div class="container">
    <div class="row">
        <div class="col-xs-12 text-center">
            <h2>New task</h2>
        </div>
        <div class="col-md-push-3 col-md-6 col-xs-12">

            <form method="POST">
                <div class="form-group">
                    <label for="taskname">Task name</label>
                    <input type="text" class="form-control" id="taskname" placeholder="Task name">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea class="form-control" id="description">

                    </textarea>
                </div>
                <input type="submit" class="btn btn-primary" value="New task"/>
                <a href="/tasks" class="btn btn-default">Cancel</a>
            </form>

        </div>
    </div>
</div>
<!-- end: content -->
<%- include('footer') %>